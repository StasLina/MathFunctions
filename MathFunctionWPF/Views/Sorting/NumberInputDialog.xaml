<Window x:Class="MathFunctionWPF.Views.Sorting.NumberInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathFunctionWPF.Views.Sorting"
        mc:Ignorable="d"
        Title="Введите число" Height="200" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="14" Text="Пожалуйста, введите число:"/>

        <TextBox Name="inputTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="150" PreviewKeyDown="NumberInput_PreviewKeyDown"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Name="okButton" Content="ОК" Width="80" Click="OkButton_Click" Margin="5"/>
            <Button Name="cancelButton" Content="Отмена" Width="80" Click="CancelButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
