<Window x:Class="MathFunctionWPF.Views.Sorting.FileSelectionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathFunctionWPF.Views.Sorting"
        mc:Ignorable="d"
        Title="Выбор файла" Height="207" Width="452" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen">
    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Left" Margin="14,13,0,0"  VerticalAlignment="Top" Width="412"  Height="73"  FontSize="22" Grid.ColumnSpan="2" >
            <TextBlock.Text>
                Выберите файл Excel. Значения столбца A будут добавлены.
            </TextBlock.Text>
        </TextBlock>

        <Button x:Name="BLoadFile" Content="Выбрать" HorizontalAlignment="Left" Height="67" Margin="87,99,0,0" VerticalAlignment="Top" Width="266" Grid.ColumnSpan="2" FontSize="20"/>

    </Grid>
</Window>
